{
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "target": "esnext",
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "lib": ["esnext", "dom"],
    "rootDir": "./",
    "outDir": "./lib"
  },
  "exclude": ["./lib"],
  "include": ["./core"]
}
